{
  "manifest_version": 3,
  "name": "Obsidian Web Clipper",
  "version": "0.1.0",
  "description": "Save web pages to your Obsidian vault with images, highlights, and AI summaries",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Obsidian Web Clipper"
  },
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/readability.js",
        "lib/turndown.js",
        "content.js"
      ],
      "css": [
        "styles/highlight.css"
      ],
      "run_at": "document_idle"
    }
  ],
  
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "lib/*.js",
        "styles/*.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
